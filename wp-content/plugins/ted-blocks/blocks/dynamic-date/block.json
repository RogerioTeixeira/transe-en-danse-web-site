{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "site-blocks/dynamic-date",
    "title": "Dynamic Date",
    "category": "widgets",
    "icon": "calendar",
    "description": "Print a formatted date from a selected ACF date field",
    "keywords": [
        "date",
        "dynamic",
        "acf"
    ],
    "acf": {
        "blockVersion": 3,
        "renderTemplate": "render.php",
        "mode": "preview"
    },
    "supports": {
        "align": true,
        "color": {
            "text": true,
            "background": false
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        }
    }
}